int leddino = 13;
int luce = 1;
int cambiadi = 5;
int ritardo = 30;
void setup(){pinMode(leddino, OUTPUT);}
void loop(){
analogWrite(leddino, luce);

luce = luce + cambiadi;
   if (luce <= 0)
    {   cambiadi= -cambiadi;} 
    if (luce >= 255){
        cambiadi= -cambiadi;} 
     
         delay(ritardo);
}
