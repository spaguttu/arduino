          break;
        case 5:
          valore = num1 * 10000 + num2 * 1000 + num3 * 100 + num4 * 10 + num5;
          break;
        case 6:
          valore = num1 * 100000 + num2 * 10000 + num3 * 1000 + num4 * 100 + num5 * 10 + num6;
          break;
      }

      if (i > 0)
      {
        Serial.print("nuovo valore baud-->");
        Serial.println(valore);
        Serial.end();
        Serial.begin(valore);
        i = 0;
      }
    }
    else if (cifra > 47 && cifra < 58)
    {
      i++;
      switch (i)
      {
        case 1:
          num1 = cifra - 48;
          break;
        case 2:
          num2 = cifra - 48;
          break;
        case 3:
          num3 = cifra - 48;
          break;
