void setup() {
  pinMode(13, OUTPUT);
  Serial.begin(9600);
  i = 0;
}
void loop() {
  while (Serial.available()) {
    cifra = Serial.read();
    if (cifra == 112 )
    {
      switch (i)
      {
        case 1:
          valore = num1;
          break;
        case 2:
          valore = num1 * 10 + num2;
          break;
        case 3:
          valore = num1 * 100 + num2 * 10 + num3;
          break;
      }

      if (i > 0)
      {
        Serial.print("valore assegnato al led-->");
        Serial.println(valore);
        analogWrite(13, valore);
        i = 0;
      }
    }

    if (cifra == 107 )
    {
      switch (i)
      {
        case 1:
